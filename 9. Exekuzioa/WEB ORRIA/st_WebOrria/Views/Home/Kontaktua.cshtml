@*
    
*@
@{

    ViewBag.Title = "Kontaktua";

}
<!DOCTYPE html>
<html lang="eu">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Formularioa Bootstrap erabiliz</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Beste estilo orri edo scriptak gehitu hemen behar badituzu -->
    <!-- Fonteko ikonoak -->
    <link rel="stylesheet" href="~/assets/vendors/themify-icons/css/themify-icons.css">

    <!-- Owl karusela -->

    <link rel="stylesheet" href="~/assets/vendors/owl-carousel/css/owl.carousel.css">
    <link rel="stylesheet" href="~/assets/vendors/owl-carousel/css/owl.theme.default.css">

    <!-- Bootstrap eta Ollie estilo nagusiak -->
    <link rel="stylesheet" href="~/assets/css/ollie.css">


</head>
<body>

    <div class="container-fluid" style="margin-top: 3%;">
        <div class="row">
            <!-- Ezkerreko zutabea, mapa batekin -->
            <div class="col-lg-6">
                <!-- Hemen maparekin integrazioa egin dezakezu, adibidez, Google Maps iframe batekin -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22473.982784038663!2d-74.00597258568964!3d40.71277534525737!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c258af24146f65%3A0x16ddf440b1d6cf2d!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2sca!4v1563364683509!5m2!1sen!2sca" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>

            <!-- Eskumako zutabea, formularioa -->
            <div class="col-lg-6">
                <div class="container">
                    <h2>Kontaktua</h2>
                    <form>
                        <div class="form-group">
                            <label for="nombre">Izena:</label>
                            <input type="text" class="form-control" id="nombre" placeholder="Idatzi zure izena" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Emaila:</label>
                            <input type="email" class="form-control" id="email" placeholder="Idatzi zure emaila" required>
                        </div>
                        <div class="form-group">
                            <label for="mensaje">Mezua:</label>
                            <textarea class="form-control" id="mensaje" rows="3" placeholder="Idatzi zure mezua" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" style="background-color: red;">Bidali</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <section class="section bg-overlay" style="margin-bottom: 1%; margin-top: 1%;">
        <!-- Kontainerra -->
        <div class="container">
            <!-- Informazio blokea -->
            <div class="infos mb-4 mb-md-2">
                <!-- Blokearen izena -->
                <div class="title">
                    <!-- Azpititulua -->
                    <h6 class="subtitle font-weight-normal"></h6>
                    <!-- Izena -->
                    <h5>SwiftTECH</h5>
                    <!-- Testu txikia -->
                    <p class="font-small">Kodea eta soluzioak sortzen, zure mundua berritzen.</p>
                </div>
                <!-- Sozialen blokea -->
                <div class="socials">
                    <!-- Lerro berriak artean justifikatua -->
                    <div class="row justify-content-between">
                        <!-- Lehenengo zutabea -->
                        <div class="col">
                            <!-- Telefonoa -->
                            <a class="d-block subtitle"><i class="ti-microphone"></i> 943 026 298</a>
                            <!-- Emaila -->
                            <a class="d-block subtitle"><i class="ti-email"></i> kontaktua@stech.eus</a>
                        </div>
                        <!-- Bigarren zutabea -->
                        <div class="col">
                            <!-- Azpititulua -->
                            <h6 class="subtitle font-weight-normal mb-1">Sare sozialak</h6>
                            <!-- Sozialen estekak -->
                            <div class="social-links">
                                <!-- Facebook -->
                                <a href="javascript:void(0)" class="link pr-1"><i class="ti-facebook"></i></a>
                                <!-- Twitter -->
                                <a href="javascript:void(0)" class="link pr-1"><i class="ti-twitter-alt"></i></a>
                                <!-- Google -->
                                <a href="javascript:void(0)" class="link pr-1"><i class="ti-google"></i></a>
                                <!-- Pinterest -->
                                <a href="javascript:void(0)" class="link pr-1"><i class="ti-pinterest-alt"></i></a>
                                <!-- Instagram -->
                                <a href="javascript:void(0)" class="link pr-1"><i class="ti-instagram"></i></a>
                                <!-- RSS -->
                                <a href="javascript:void(0)" class="link pr-1"><i class="ti-rss"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- Beste script batzuk gehitu hemen behar badituzu -->

</body>
</html>
