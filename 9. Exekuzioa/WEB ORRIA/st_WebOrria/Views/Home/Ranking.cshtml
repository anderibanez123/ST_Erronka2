@model List<st_WebOrria.Models.Jokalariak>

@{
    ViewBag.Title = "Ranking";
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            
            $.get("http://stenpresa.pythonanywhere.com:8012/lortu_datuak", function (data) {
                
                data.forEach(function (jokalaria) {
                    var row = "<tr><td>" + jokalaria.izena + "</td><td>" + jokalaria.abizena + "</td><td>" + jokalaria.puntuak + "</td></tr>";
                    $("tbody").append(row);
                });
            });
        });
    </script>
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Ranking de Jokalariak</h1>
        </div>
    </div>

    <div class="row mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th>Izena</th>
                    <th>Abizena</th>
                    <th>Puntuak</th>
                </tr>
            </thead>
            <tbody>
                <!-- Los datos se llenarán dinámicamente usando jQuery -->
            </tbody>
        </table>
    </div>
</div>
