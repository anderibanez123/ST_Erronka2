@{
    ViewData["Title"] = "Hasiera";
}

<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="imagen1.jpg" class="d-block w-100" alt="Primer slide">
        </div>
        <div class="carousel-item">
            <img src="imagen2.jpg" class="d-block w-100" alt="Segundo slide">
        </div>
        <!-- Agrega más elementos según sea necesario -->
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="imagen3.jpg" class="img-fluid" alt="Imagen izquierda">
        </div>
        <div class="col-md-6">
            <h2>Texto derecha</h2>
            <p>Descripción o texto que deseas mostrar en la mitad derecha.</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <h2>Texto izquierda</h2>
            <p>Descripción o texto que deseas mostrar en la mitad izquierda.</p>
        </div>
        <div class="col-md-6">
            <img src="imagen4.jpg" class="img-fluid" alt="Imagen derecha">
        </div>
    </div>
</div>

<!-- Agrega el script de Bootstrap para el carrusel -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
